# Configuration template for the Invoice Compliance Tracker
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Configuration (Alternative LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email Configuration for Notifications
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=admin@company.com

# Invoice Processing Configuration
MAX_INVOICE_AMOUNT=50000
APPROVED_VENDORS=ABC Pvt Ltd,XYZ Logistics
PROCESSING_INTERVAL=5

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=invoice_embeddings

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/invoice_tracker.log

# File Paths
INCOMING_INVOICES_PATH=./incoming_invoices
PROCESSED_INVOICES_PATH=./processed_invoices
EXPORTS_PATH=./exports

# Streamlit Configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Machine Learning Configuration
ANOMALY_DETECTION_THRESHOLD=0.05
FRAUD_DETECTION_CONFIDENCE=0.8

# Currency Configuration
DEFAULT_CURRENCY=INR
